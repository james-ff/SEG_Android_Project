<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:logo="http://schemas.android.com/apk/res/com.example.worldly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectionActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.worldly.view.LogoTextView
            android:id="@+id/ltvFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="chooseMode"
            android:paddingRight="10dp"
            android:text="@string/strFamily"
            android:textColor="@color/logo_text_view"
            android:textSize="50sp"
            logo:logo_type="home" />

        <Button
            android:id="@+id/btnFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/dark_gray"
            android:onClick="chooseMode"
            android:text="@string/strFamily"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.worldly.view.LogoTextView
            android:id="@+id/ltvNewLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="chooseMode"
            android:paddingRight="10dp"
            android:text="@string/strNewLife"
            android:textColor="@color/logo_text_view"
            android:textSize="50sp"
            logo:logo_type="road" />

        <Button
            android:id="@+id/btnNewLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/dark_gray"
            android:onClick="chooseMode"
            android:text="@string/strNewLife"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.worldly.view.LogoTextView
            android:id="@+id/ltvBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="chooseMode"
            android:paddingRight="10dp"
            android:text="@string/strBusiness"
            android:textColor="@color/logo_text_view"
            android:textSize="50sp"
            logo:logo_type="briefcase" />

        <Button
            android:id="@+id/btnBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/dark_gray"
            android:onClick="chooseMode"
            android:text="@string/strBusiness"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.worldly.view.LogoTextView
            android:id="@+id/ltvCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="chooseMode"
            android:paddingRight="10dp"
            android:text="@string/strCustom"
            android:textColor="@color/logo_text_view"
            android:textSize="50sp"
            logo:logo_type="tags" />

        <Button
            android:id="@+id/btnCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/dark_gray"
            android:onClick="chooseMode"
            android:text="@string/strCustom"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>